<android.support.v7.widget.CardView
android:id="@+id/amount_to_sell_card_view"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginBottom="16dp"
app:cardBackgroundColor="@color/ccw_card_background_status_confirm"
app:cardCornerRadius="4dp"
app:cardElevation="4dp"
tools:visibility="visible">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ccw_clause_number"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="top|end"
        android:layout_margin="9dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_detail_number_01"
        tools:ignore="contentDescription"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ccw_card_view_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="#1271A7"
            android:textSize="14sp"
            android:text="@string/ccw_amount_to_buy"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1271A7"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ccw_buying_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:text="@string/buying_text"
                android:textColor="@color/description_text_status_confirm"/>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatButton
                android:id="@+id/ccw_buying_value"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="#DDD"
                android:inputType="numberDecimal"
                android:maxWidth="150dp"
                android:minWidth="50dp"
                android:paddingEnd="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingStart="8dp"
                android:textAllCaps="false"
                android:textColor="#222"
                android:textSize="14sp"
                tools:text="556.000000000"/>

            <TextView
                android:id="@+id/ccw_currency_to_buy"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="@color/text_value_status_confirm"
                tools:text="BTC"/>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="14dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/description_text_status_confirm"
            android:text="@string/ccw_miner_confirmation_time"
            android:layout_marginTop="7dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="5dp" />
        <RadioGroup
            android:id="@+id/rdgGrupo"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/send_speed_low">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Low"
            android:id="@+id/send_speed_low" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:id="@+id/send_speed_medium" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="High"
            android:id="@+id/send_speed_high" />
        </RadioGroup>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:text="@string/ccw_fee_miner"
                android:textColor="@color/description_text_status_confirm"/>

            <TextView
                android:id="@+id/ccw_miner_fee"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:textColor="@color/ccw_negotiation_details_background"
                tools:text="XXX"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/ccw_currency_fee_miner"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="@color/text_value_status_confirm"
                tools:text="BTC"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:text="@string/ccw_total_to_pay_after_fee"
                android:textColor="@color/description_text_status_confirm"/>

            <TextView
                android:id="@+id/ccw_total_after_fee"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:textColor="@color/ccw_negotiation_details_background"
                tools:text="XXX"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/ccw_currency_total"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="14sp"
                android:textColor="@color/text_value_status_confirm"
                tools:text="BTC"/>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="34dp"
            android:visibility="visible">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#1271A7"/>

            <Button
                android:id="@+id/ccw_confirm_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_margin="8dp"
                android:text="@string/status_confirm"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>

</android.support.v7.widget.CardView>