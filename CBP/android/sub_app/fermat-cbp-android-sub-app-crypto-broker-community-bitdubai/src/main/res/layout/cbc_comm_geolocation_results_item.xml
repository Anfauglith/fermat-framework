<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ubication_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_margin="8dp"
        android:src="@drawable/cbc_geolocation_light_icon"
        />

    <TextView
        android:id="@+id/state_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/ubication_icon"
        android:layout_toRightOf="@id/ubication_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_black"
        tools:text="State"/>

    <TextView
        android:id="@+id/country_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/state_search"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_toEndOf="@id/ubication_icon"
        android:layout_toRightOf="@id/ubication_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        tools:text="Country"/>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/country_search"
        android:layout_marginTop="8dp"
        android:background="#414042"/>

</RelativeLayout>