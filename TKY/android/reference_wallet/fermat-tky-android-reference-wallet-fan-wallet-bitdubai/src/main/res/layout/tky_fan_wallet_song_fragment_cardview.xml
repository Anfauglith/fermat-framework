<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="80dp"

    >

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:background="#090223"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:id="@+id/imagen"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:layout_above="@+id/linea" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Large Text"
                android:id="@+id/songname"
                android:layout_toRightOf="@+id/imagen"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:textColor="@color/songtabsongnamecolor" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/songtabartistnamecolor"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/artistname"
                android:layout_below="@+id/songname"
                android:layout_alignLeft="@+id/songname" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/songtabstatuscolor"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/status"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/artistname"
                android:paddingBottom="5dp" />


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:id="@+id/linea"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="false"
                android:layout_alignParentStart="true">

            </View>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar2"
                android:layout_marginStart="110dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="false"
                android:layout_toEndOf="@+id/status"
                android:layout_alignBottom="@+id/status"
                android:paddingBottom="5dp"
                android:paddingRight="10dp"
                android:layout_alignStart="@+id/status"
                android:backgroundTint="#dbdbdb" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

