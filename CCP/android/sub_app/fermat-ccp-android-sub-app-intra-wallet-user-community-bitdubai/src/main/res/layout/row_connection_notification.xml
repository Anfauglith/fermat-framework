<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
    tools:showIn="@layout/fragment_connections_notifications">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_border_shadow"
            android:paddingLeft="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentTop="true"
            android:layout_below="@+id/img_layout">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.00">

                <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                    android:id="@+id/username"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingLeft="4dp"
                    android:paddingRight="8dp"
                    android:singleLine="true"
                    android:text="UserName"
                    android:textColor="#0072bb"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1">

                    <ImageView
                        tools:ignore="ContentDescription"
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ccp_geolacation_light_icon"
                        android:layout_gravity="center" />

                    <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/notification_location"
                        android:layout_gravity="center"
                        android:text="City - State"
                        android:layout_weight="0.81" />

                </LinearLayout>

            </LinearLayout>

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.01"
                android:drawableRight="@drawable/ic_profile_connect"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text="reception time"
                android:textSize="16sp"
                tools:ignore="HardcodedText,RtlHardcoded"
                android:textColor="#aaeae5"
                android:layout_gravity="center"
                android:editable="false"
                android:id="@+id/reception_time" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/circleuser_icon"
            android:id="@+id/img_layout">

            <ImageView
                android:id="@+id/imageView_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                android:background="@drawable/photocontact_icon" />

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="3dp"
        android:background="#ffffff" />

</LinearLayout>